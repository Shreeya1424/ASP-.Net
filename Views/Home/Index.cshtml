@{
    ViewBag.Title = "Dashboard";
}

<style>
    /* 🔹 Main header card style */
    .header-card {
        background: linear-gradient(135deg, #f3e8ff, #ffffff); /* blue gradient */
        color: #fff;
        border-radius: 20px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .header-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }

    .header-title {
        font-size: 2rem;
        font-weight: 700;
    }

    .header-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .header-image {
        object-fit: cover;
        height: 100%;
        width: 100%;
        max-width: 400px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease;
    }

        .header-image:hover {
            transform: scale(1.03);
        }
</style>

<div class="container mt-4">
    <!-- 🔹 Big Header Card -->
    <div class="card shadow mb-4 header-card" style="height: 220px;color: purple">
        <div class="card-body d-flex align-items-center justify-content-between p-4 h-100">

            <!-- Left side: Title -->
            <div class="text-center w-50 d-flex flex-column justify-content-center h-100">
                <h2 class="header-title mb-3">🏥 Hospital Management System</h2>
                <p class="header-subtitle">Manage departments, doctors, patients & appointments in one place.</p>
            </div>

            <!-- Right side: Image -->
            <div class="h-100 w-50 d-flex justify-content-end">
                <img src="~/assets/img/Hospital-Management-System.jpg"
                     alt="Hospital"
                     class="img-fluid header-image">
            </div>
        </div>
    </div>
</div>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


    <style>
        /* Custom card style */
        .dashboard-card {
            border-radius: 15px;
            min-height: 180px; /* bigger height */
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            color: #fff;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
                filter: brightness(1.05);
            }

        /* Different background colors for variety */
    .bg-department {
        background: linear-gradient(135deg, #d1c4e9, #f5f3ff);
        color: #212529;
    }

    .bg-doctor {
        background: linear-gradient(135deg, #d1c4e9, #f5f3ff);
        color: #212529;
    }

    .bg-patient {
        background: linear-gradient(135deg, #d1c4e9, #f5f3ff);
        color: #212529;
    }


    .bg-appointment {
        background: linear-gradient(135deg, #d1c4e9, #f5f3ff);
        color: #212529;
    }

        /* Teal */

        .dashboard-title {
            font-size: 1rem;
            font-weight: 600;
            margin-top: 8px;
        }

        .dashboard-count {
            font-size: 2rem;
            font-weight: bold;
            margin-top: 5px;
        }

        .dashboard-icon {
            font-size: 2.5rem;
            margin-bottom: 8px;
        }
    </style>

<div class="row mb-4 justify-content-center">
    <div class="col-md-3">
        <div class="dashboard-card bg-department">
            <i class="bi bi-building dashboard-icon"></i>
            <div class="dashboard-title">Departments</div>
            <div class="dashboard-count">@ViewBag.Departments</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="dashboard-card bg-doctor">
            <i class="bi bi-person-badge dashboard-icon"></i>
            <div class="dashboard-title">Doctors</div>
            <div class="dashboard-count">@ViewBag.Doctors</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="dashboard-card bg-patient">
            <i class="bi bi-people dashboard-icon"></i>
            <div class="dashboard-title">Patients</div>
            <div class="dashboard-count">@ViewBag.Patients</div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-3">
        <div class="dashboard-card bg-appointment">
            <i class="bi bi-calendar-check dashboard-icon"></i>
            <div class="dashboard-title">Pending Appointments</div>
            <div class="dashboard-count">@ViewBag.PendingAppointments</div> <!-- ✅ fixed -->
        </div>
    </div>

    <div class="col-md-3">
        <div class="dashboard-card bg-appointment">
            <i class="bi bi-check2-circle dashboard-icon"></i>
            <div class="dashboard-title">Completed Appointments</div>
            <div class="dashboard-count">@ViewBag.CompletedAppointments</div> <!-- ✅ fixed -->
        </div>
    </div>
</div>


